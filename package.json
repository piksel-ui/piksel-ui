{
  "name": "piksel-ui",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build --filter=./packages/pui-*",
    "dev": "turbo dev --filter=./packages/pui-*",
    "clean": "turbo clean --filter=./packages/pui-* && rm -rf node_modules",
    "lint": "turbo lint --filter=./packages/pui-*",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "status": "changeset status",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=./packages/pui-* && changeset publish"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "packages/*"
  ]
}
